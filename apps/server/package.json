{
  "author": "PIYoung(https://github.com/PIYoung)",
  "name": "server",
  "version": "1.0.0",
  "main": "./src/main.ts",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build && tsc-alias",
    "start": "nest start",
    "start:dev": "NODE_TLS_REJECT_UNAUTHORIZED='0' nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "start:local": "NODE_ENV='local' NODE_TLS_REJECT_UNAUTHORIZED='0' nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "nest build && tsc-alias && pm2 start dist/main.js -i max",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "pretty": "prettier --write \"./src/**/*.{ts,tsx,js,jsx,json}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs/common": "^8.2.5",
    "@nestjs/config": "^1.1.6",
    "@nestjs/core": "^8.2.5",
    "@nestjs/graphql": "^9.1.2",
    "@nestjs/platform-express": "^8.2.5",
    "@nestjs/schedule": "^1.0.2",
    "@nestjs/serve-static": "^2.2.2",
    "@nestjs/throttler": "^2.0.0",
    "app-root-path": "^3.0.0",
    "cookie-parser": "^1.4.6",
    "graphql": "^16.2.0",
    "helmet": "^5.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.0",
    "@nestjs/schematics": "^8.0.5",
    "@nestjs/swagger": "^5.1.5",
    "@nestjs/testing": "^8.2.5",
    "@types/app-root-path": "^1.2.4",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/eslint-config-prettier": "^6.11.0",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/helmet": "^4.0.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "swagger-ui-express": "^4.3.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.4"
  }
}
